{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "preserve",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "web_modules/.types/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@providers/*": [
        "app/providers/*"
      ]
    }
  },
  "include": [
    "app"
  ]
}