{
  "name": "typescript-react-pwa",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "run-s clean static app service-worker css",
    "clean": "shx rm -rf dist",
    "static": "shx cp -rf static dist && shx cp dist/index.html dist/404.html",
    "app": "esbuild app/index.tsx --bundle --metafile=stats/app.json --define:process.env.NODE_ENV=\\\"production\\\" --outfile=dist/app.js",
    "service-worker": "esbuild service-worker/index.ts --bundle --metafile=stats/service-worker.json --define:process.env.NODE_ENV=\\\"production\\\" --tsconfig=service-worker/tsconfig.json --outfile=dist/service-worker.js",
    "css:build": "postcss app/**/*.css --no-map --use autoprefixer --dir dist/css",
    "css:merge": "shx cat dist/css/* > dist/main.css",
    "css:clean": "shx rm -rf dist/css",
    "css": "run-s css:build css:merge css:clean",
    "serve": "http-server dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevegagnon/typescript-react-pwa.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stevegagnon/typescript-react-pwa/issues"
  },
  "homepage": "https://github.com/stevegagnon/typescript-react-pwa#readme",
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "esbuild": "^0.6.28",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "shx": "^0.3.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "preact": "^10.4.8",
    "preact-router": "^3.2.1"
  }
}
